datasource db {
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// EMPRESA
model Company {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  ownerId   String
  createdAt DateTime @default(now())
  
  // Configurações
  logoUrl     String?  @default("")
  openTime    String   @default("09:00")
  closeTime   String   @default("18:00")
  lunchStart  String   @default("12:00")
  lunchEnd    String   @default("13:00")
  interval    Int      @default(30)
  workDays    String   @default("1,2,3,4,5")
  monthlyGoal Decimal  @default(5000)

  services      Service[]
  bookings      Booking[]
  professionals Professional[]
  teamMembers   TeamMember[] // <--- RELAÇÃO NOVA
}

// MEMBROS DA EQUIPE (LOGIN)
model TeamMember {
  id        String   @id @default(uuid())
  email     String   @unique
  role      String   @default("MEMBER")
  
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
}

// PROFISSIONAIS (AGENDA)
model Professional {
  id        String   @id @default(uuid())
  name      String
  photoUrl  String?
  phone     String?
  
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  
  bookings  Booking[]
}

// SERVIÇOS
model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal
  duration    Int
  
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  
  bookings    Booking[]
}

// AGENDAMENTOS
model Booking {
  id            String   @id @default(uuid())
  date          DateTime
  customerName  String
  customerPhone String?
  userId        String?
  
  serviceId     String
  service       Service @relation(fields: [serviceId], references: [id])
  
  professionalId String?
  professional   Professional? @relation(fields: [professionalId], references: [id])

  companyId     String
  company       Company @relation(fields: [companyId], references: [id])
}

// ASSINATURAS
model Subscription {
  id        String   @id @default(uuid())
  userId    String   @unique
  plan      String   
  status    String   @default("ACTIVE")
  expiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}