// EMPRESA
model Company {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  ownerId   String
  createdAt DateTime @default(now())
  
  // Configurações
  logoUrl     String?  @default("")
  openTime    String   @default("09:00")
  closeTime   String   @default("18:00")
  lunchStart  String   @default("12:00")
  lunchEnd    String   @default("13:00")
  interval    Int      @default(30)
  workDays    String   @default("1,2,3,4,5")
  monthlyGoal Decimal  @default(5000)

  services      Service[]
  bookings      Booking[]
  professionals Professional[]
  teamMembers   TeamMember[]
}

// MEMBROS DA EQUIPE
model TeamMember {
  id        String   @id @default(uuid())
  email     String   @unique
  role      String   @default("MEMBER")
  
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
}

// PROFISSIONAIS
model Professional {
  id        String   @id @default(uuid())
  name      String
  photoUrl  String?
  phone     String?
  color     String   @default("#3b82f6")
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  
  bookings  Booking[]
}

// SERVIÇOS
model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal
  duration    Int
  
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  
  bookings    Booking[]
}

// AGENDAMENTOS
model Booking {
  id            String   @id @default(uuid())
  date          DateTime
  customerName  String
  customerPhone String?
  userId        String?
  
  serviceId     String
  service       Service @relation(fields: [serviceId], references: [id])
  
  professionalId String?
  professional   Professional? @relation(fields: [professionalId], references: [id])

  companyId     String
  company       Company @relation(fields: [companyId], references: [id])
}

// ASSINATURAS
model Subscription {
  id        String   @id @default(uuid())
  userId    String   @unique
  plan      String   // INDIVIDUAL, PREMIUM, MASTER
  status    String   @default("INACTIVE") // ACTIVE, CANCELED, PAST_DUE
  
  // DADOS DO STRIPE
  stripeCustomerId     String?   @unique // ID do cliente no Stripe
  stripeSubscriptionId String?   @unique // ID da assinatura recorrente
  stripePriceId        String?             // Qual plano ele paga
  expiresAt            DateTime?           // Data da próxima cobrança/vencimento

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

