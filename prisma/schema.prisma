// 2. Nossas Tabelas

model Company {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique // Ex: consultorio-yan
  ownerId   String   // <--- NOVO: O ID do usuário do Clerk que é dono disso
  createdAt DateTime @default(now())
  
  services  Service[]
  bookings  Booking[]
}

// (O restante do arquivo continua igual)
model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal
  duration    Int
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  bookings    Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  date      DateTime
  customerName  String
  customerPhone String?
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])
  companyId String
  company   Company @relation(fields: [companyId], references: [id])
}